{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc/site",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "importHelpers": true,
    "target": "ES2022",
    "lib": ["es2018", "dom"],
    "types": ["node"],
    "paths": {
      "@tethys/pro/*": ["../../packages/components/*"]
    }
  },
  "files": ["src/main.ts"],
  "include": ["src/**/*.d.ts"],
  "exclude": ["src/assets", "test.ts"]
}
