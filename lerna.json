{
  "version": "0.0.1-alpha.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "conventionalCommits": true,
      "gitTagVersion": false,
      "push": false,
      "yes": true
    },
    "publish": {
      "message": "chore(release): publish",
      "ignoreChanges": [
        ".gitignore",
        "*.log",
        "*.md"
      ]
    },
    "bootstrap": {
      "ignore": "npm-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}
