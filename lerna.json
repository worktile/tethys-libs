{
  "version": "17.1.0-next.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "conventionalCommits": true,
      "gitTagVersion": false,
      "push": false,
      "yes": true
    },
    "publish": {
      "message": "chore(release): publish",
      "ignoreChanges": [".gitignore", "*.log", "*.md"]
    },
    "bootstrap": {
      "ignore": "npm-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
