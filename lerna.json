{
  "version": "0.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "conventionalCommits": true,
      "exact": true,
      "ignoreChanges": ["**/*.md"],
      "message": "build: release version %v"
    },
    "publish": {
      "message": "chore(release): publish",
      "ignoreChanges": [".gitignore", "*.log", "*.md"]
    },
    "bootstrap": {
      "ignore": "npm-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
